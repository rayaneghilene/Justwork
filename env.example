# Environment Variables for JustWork Resume Analysis API
# Copy this file to .env and update the values with your actual credentials
# NEVER commit .env file to version control!

# =============================================================================
# REQUIRED: API Configuration
# =============================================================================

# Mistral AI API Key (REQUIRED)
# Get your API key from: https://docs.mistral.ai/api/
API_KEY=your_mistral_api_key_here

# =============================================================================
# OPTIONAL: Application Configuration
# =============================================================================

# Data folder for uploaded resumes
DATA_FOLDER=data

# AI Model Configuration
EMBEDDING_MODEL=all-MiniLM-L12-V2
KEYWORD_MODEL=numind/NuExtract-tiny

# Server Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=info

# =============================================================================
# OPTIONAL: File Processing Configuration
# =============================================================================

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=10

# Allowed file types (comma-separated)
ALLOWED_FILE_TYPES=pdf

# =============================================================================
# OPTIONAL: Performance Configuration
# =============================================================================

# Enable keyword extraction caching
ENABLE_KEYWORD_CACHE=true

# Cache time-to-live in seconds
CACHE_TTL_SECONDS=3600

# =============================================================================
# DOCKER SPECIFIC
# =============================================================================

# Backend URL for frontend service (when using docker-compose)
BACKEND_URL=http://justwork-backend:8000
